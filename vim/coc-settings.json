{
	"suggest.enablePreview":true
    // turn off floating windows for documenttion
	//,"suggest.floatEnable":false

	,"rust.clippy_preference":"off"

    //,"python.trace.server": "verbose"
	,"python.linting.enabled":false
    ,"python.jediEnabled": true
    ,"python.venvFolders":[".venv"]

	,"diagnostic.displayByAle":true

    ,"snippets.ultisnips.enable":true
    ,"snippets.ultisnips.directories":["UltiSnips"]
    ,"snippets.userSnippetsDirectory":"~/.vim/UltiSnips"

    ,"snippets.extends": {
    //"javascriptreact": ["javascript"],
    //"typescriptreact": ["javascript", "javascript-jasmine-arrow"],
    //"typescript": ["javascript", "javascript-jasmine-arrow"]
    "typescriptreact": ["typescript"],
    "typescript.tsx": ["javascript"]
  }

    ,"yaml.schemas": {
        "kubernetes": "/*.yaml"
}
,"languageserver": {
  "haskell": {
    "command": "hie-wrapper",
    "args": ["--lsp"],
    "rootPatterns": [
      "stack.yaml",
      "cabal.config",
      "package.yaml"
    ],
    "filetypes": [
      "haskell",
      "lhaskell"
    ],
    "initializationOptions": {
      "languageServerHaskell": {
        "hlintOn": true
      }
    }
  }
}
}
